                            android:id="@+id/bookmarked_year"
                            style="@style/TextAppearance.myBody1_sans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="dates/status"
                            android:text="@{String.valueOf(userShow.userShowId.show.yearAndStatus())}" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/bookmarked_runtime"
                            style="@style/TextAppearance.myBody1_sans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="seasons/eps"
                            android:text="@{String.valueOf(userShow.userShowId.show.seasonsAndEpisodes)}" />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/bookmarked_language"
                            style="@style/TextAppearance.myBody1_sans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="language"
                            android:text="@{userShow.userShowId.show.language}" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/bookmarked_country"
                            style="@style/TextAppearance.myBody1_sans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="country"
                            android:text="@{userShow.userShowId.show.country}"
                            />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/bookmarked_genres"
                            style="@style/TextAppearance.myBody1_sans"

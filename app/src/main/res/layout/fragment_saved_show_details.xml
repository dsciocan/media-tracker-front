                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        app:layout_constraintTop_toBottomOf="@id/bookmarked_fragment_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/bookmarked_to_watched_button"
                        app:layout_constraintBottom_toTopOf="@id/bookmarked_fragment_details_card"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/autoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="none"
                            android:hint="Status" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/bookmarked_text_container"
                        app:layout_constraintBottom_toTopOf="@id/bookmarked_fragment_details_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        app:flow_horizontalAlign="center"
